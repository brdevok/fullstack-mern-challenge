{
    "compilerOptions": {
      "target": "ES5",                          
      "module": "ESNext",                                               
      "jsx": "react",    
      "strict": true,
      "moduleResolution": "node",
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "noImplicitAny": false,
      "typeRoots": [
        "./types",
        "./node_modules/@types"
      ]
    },
    "include": [
      "types",
      "src"
    ],
    "exclude": [
        "node_modules"
    ]
}